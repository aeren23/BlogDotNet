@model List<ArticleDto>
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Çöp Kutusu /</span>Makaleler
    </h4>

    <div class="card">
        <h5 class="card-header">Silinmiş Makaleler</h5>
        <div class="table-responsive text-nowrap p-4">
            <table class="table table-bordered m-2 " id="articlesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr name="@item.Id">
                            <td>@item.Title</td>
                            <td>@item.Category.Name</td>
                            <td>@item.CreatedDate.ToShortDateString()</td>
                            <td>@item.CreatedBy</td>
                            <td>@(item.IsDeleted ? "Aktif Değil" : "Aktif")</td>
                            <td>
                                <a class="btn-warning btn btn-sm" data-id="@item.Id" asp-area="Admin" asp-controller="Article" asp-action="UndoDelete" asp-route-articleId="@item.Id"><i class="bx bx-undo"></i> Undo Delete</a>
                                @* <a class="btn-danger btn btn-sm" data-id="@item.Id" asp-area="Admin" asp-controller="Article" asp-action="Delete" asp-route-articleId="@item.Id"><i class="bx bxs-minus-circle"></i> Sil</a> *@
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->

    <hr class="my-12">

</div>
@section Scripts {
    <script src="~/js/articleIndex.js" type="application/ecmascript"></script>
}